{
    "swagger": "2.0",
    "info": {
        "title": "Social Media API Service",
        "description": "The API represents the backend service for the social media application",
        "version": "1.1.0",
        "contact": {
            "email": "lopesd.dan@gmail.com"
        },
        "license": {
            "name": "Apache License 2.0",
            "url": "https://github.com/danilo-lopes/socialmedia/blob/main/LICENSE"
        }
    },
    "host": "127.0.0.1:8080",
    "basePath": "/",
    "tags": [
        {
            "name": "Login"
        },
        {
            "name": "Users"
        },
        {
            "name": "Publications"
        },
        {
            "name": "Followers"
        },
        {
            "name": "Heathcheck"
        },
        {
            "name": "Metrics"
        }
    ],
    "schemes": [
        "http"
    ],
    "paths": {
        "/users": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Return Users With Given Email or Nickname",
                "description": "Endpoint used to retrieve users with given filter, email or nickname on URL query",
                "operationId": "GetUsers",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "user",
                        "description": "Object containing nickname or email to search users",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/User"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Create a User",
                "description": "Endpoint used to create users",
                "operationId": "CreateUser",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Object containing the user information",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "required": [
                                "name",
                                "nick",
                                "email",
                                "pass"
                            ],
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "example": "User Foo Bar"
                                },
                                "nick": {
                                    "type": "string",
                                    "example": "usr1"
                                },
                                "email": {
                                    "type": "string",
                                    "example": "user1@gmail.com"
                                },
                                "pass": {
                                    "type": "string",
                                    "example": "usr!@#$$#@!"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "integer",
                                    "format": "uint64",
                                    "example": 1
                                },
                                "name": {
                                    "type": "string",
                                    "example": "User Foo Bar"
                                },
                                "nick": {
                                    "type": "string",
                                    "example": "usr1"
                                },
                                "email": {
                                    "type": "string",
                                    "example": "user1@gmail.com"
                                },
                                "pass": {
                                    "type": "string",
                                    "example": "$2a$10$xk0ynvsUetCqG86UelFrLOjvM1vMDYTbTKjeix1gsmOQzXcm9xf2m"
                                },
                                "createdat": {
                                    "type": "string",
                                    "example": "0001-01-01T00:00:00Z"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    }
                }
            }
        },
        "/users/{userID}": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Return a Specific User With Given User ID",
                "description": "Endpoint used to retrieve a user with given user id",
                "operationId": "GetUser",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "userID",
                        "description": "The id of user to be fetched",
                        "required": true,
                        "type": "string",
                        "format": "uint64"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    }
                }
            },
            "patch": {
                "tags": [
                    "Users"
                ],
                "summary": "Update a User",
                "description": "Endpoint used to update a user",
                "operationId": "UpdateUser",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "userID",
                        "description": "The id of user to be updated",
                        "required": true,
                        "type": "integer",
                        "format": "uint64"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Object containing the user information",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "required": [
                                "name",
                                "nick",
                                "email"
                            ],
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "example": "User Foo Bar"
                                },
                                "nick": {
                                    "type": "string",
                                    "example": "usr1"
                                },
                                "email": {
                                    "type": "string",
                                    "example": "user1@gmail.com"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "Users"
                ],
                "summary": "Delete a User",
                "description": "Endpoint used to delete a user",
                "operationId": "DeleteUser",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "userID",
                        "description": "The id of user to be updated",
                        "required": true,
                        "type": "integer",
                        "format": "uint64"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "schema": {
                            "$ref": "#/definitions/ApiErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "ApiErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "description": "Error message"
                }
            }
        },
        "User": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "uint64",
                    "example": 1
                },
                "name": {
                    "type": "string",
                    "example": "User1"
                },
                "nick": {
                    "type": "string",
                    "example": "user1"
                },
                "email": {
                    "type": "string",
                    "example": "user1@gmail.com"
                },
                "createdat": {
                    "type": "string",
                    "example": "2022-08-01T00:17:28-03:00"
                }
            }
        }
    },
    "externalDocs": {
        "description": "Find out more about Swagger",
        "url": "http://swagger.io"
    }
}